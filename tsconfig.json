{
    "compilerOptions": {
        "noEmit": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "esnext",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": true,
        "lib": ["es6", "es7", "dom", "esnext"]
    },
    "include": ["src/**/*.ts*"]
}
